<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/dark_green_8"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@id/tab_table_layout"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/tab_inactive_text_color"
        app:tabIndicatorGravity="top"
        app:tabTextAppearance="@style/view_pager_item_text_appearance"
        app:tabIndicatorColor="@android:color/holo_red_light"
        app:tabBackground="@color/dark_green_5"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabMode="fixed" />

</androidx.constraintlayout.widget.ConstraintLayout>