<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/view_pager_main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activities.StatisticsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/static_activity_toolbar"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/toolbar_tv"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/semi_bold"
            android:theme="@style/general_text_view"
            android:textSize="18sp"
            android:text="Weather Statistics"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Daily Forecast"
                android:textSize="20sp"
                android:theme="@style/general_text_view"
                android:fontFamily="@font/semi_bold"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chart_layout_temperature"
                android:background="@drawable/card_background_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_marginVertical="10dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chart_layout_pressure"
                android:background="@drawable/card_background_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_marginVertical="10dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_pressure"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chart_layout_humidity"
                android:background="@drawable/card_background_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_marginVertical="10dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chart_layout_wind_speed"
                android:background="@drawable/card_background_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_marginVertical="10dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_wind_speed"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                app:dividerColor="@color/dark_green_3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="7 days Forecast"
                android:textSize="20sp"
                android:theme="@style/general_text_view"
                android:fontFamily="@font/semi_bold"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chart_layout_temperature_7days"
                android:background="@drawable/card_background_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_marginVertical="10dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_temperature_7days"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chart_layout_pressure_7days"
                android:background="@drawable/card_background_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_marginVertical="10dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_pressure_7days"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chart_layout_humidity_7days"
                android:background="@drawable/card_background_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_marginVertical="10dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_humidity_7days"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chart_layout_wind_speed_7days"
                android:background="@drawable/card_background_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:layout_marginVertical="10dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_wind_speed_7days"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

